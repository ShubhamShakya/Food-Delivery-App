<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dataflair.fooddeliveryapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/dataflair"
        android:label="@string/app_name"
        android:roundIcon="@drawable/dataflair"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodDeliveryApp">
        <activity
            android:name=".restaurantadmin.RestaurantAdminDashboard"
            android:exported="false" />
        <activity
            android:name=".login.MainAdminDashboard"
            android:exported="false" />
        <activity
            android:name=".login.MainLogin"
            android:exported="false"
            android:label="@string/title_activity_main_login"
            android:theme="@style/Theme.FoodDeliveryApp.NoActionBar" />
        <activity android:name=".Activities.AdminActivity" />
        <activity android:name=".Activities.UserRoleActivity" />
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.GetStartedActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>